<h1><%= @task.title %></h1>
<%= link_to "Edit this task", edit_path(@task) %>
<p><%= @task.details %></p>
<% if @task.completed %>
  <input type="checkbox" checked> This task is completed
<% else %>
  <input type="checkbox"> This task is not completed
<% end %>
<br>
<br>
<%= link_to "Back to list", tasks_path %>
